                    </div>
                    <div class='card-body'>
                        <div class='row'>
                            <div class='col-md-12'>
                                <div class='card'>
                                    <div class='card-header p-2'>
                                        <ul class='nav nav-pills'>
                                            <li class='nav-item'><a
                                                    class='nav-link active'
                                                    href='#activity'
                                                    data-toggle='tab'
                                                >Thông tin chung</a></li>
                                        </ul>
                                    </div><!-- /.card-header -->
                                    <form
                                        method='POST'
                                        action='/admin/products/{{Product._id}}?_method=PUT'
                                        onsubmit='return validateForm();'
                                    >
                                        <div class='card-body'>
                                            <div class='tab-content'>
                                                <div
                                                    class='active tab-pane'
                                                    id='activity'
                                                >
                                                    <div class='form-group'>
                                                        <label for='name'>Tên
                                                            sản phẩm</label>
                                                        <input
                                                            type='text'
                                                            value='{{Product.name}}'
                                                            id='name'
                                                            name='name'
                                                            class='form-control'
                                                            placeholder='Tên sản phẩm'
                                                        />
                                                    </div>
                                                    <div class='form-group'>
                                                        <label
                                                            for='category'
                                                        >Danh mục</label>
                                                        <input
                                                            type='text'
                                                            value='{{Product.category}}'
                                                            id='category'
                                                            name='category'
                                                            class='form-control'
                                                            placeholder='Danh mục'
                                                        />
                                                    </div>
                                                    <div class='form-group'>
                                                        <label
                                                            for='price'
                                                        >Giá</label>
                                                        <input
                                                            type='text'
                                                            value='{{Product.price}}'
                                                            id='price'
                                                            name='price'
                                                            class='form-control'
                                                            placeholder='Giá'
                                                        />
                                                    </div>
                                                    <div class='form-group'>
                                                        <label
                                                            for='salePrice'
                                                        >Sale</label>
                                                        <input
                                                            type='text'
                                                            value='{{Product.salePrice}}'
                                                            id='salePrice'
                                                            name='salePrice'
                                                            class='form-control'
                                                            placeholder='Sale'
                                                        />
                                                    </div>
                                                    <div class='form-group'>
                                                        <label for='detail'>Mô
                                                            tả sản phẩm</label>
                                                        <textarea
                                                            id='detail'
                                                            name='detail'
                                                            class='form-control'
                                                            placeholder='Mô tả'
                                                        >{{Product.detail}}</textarea>
                                                    </div>
                                                    <div class='form-group'>
                                                        <label for='quantity'>Số
                                                            lượng</label>
                                                        <input
                                                            type='text'
                                                            value='{{Product.quantity}}'
                                                            id='quantity'
                                                            name='quantity'
                                                            class='form-control'
